{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
  ]
}
